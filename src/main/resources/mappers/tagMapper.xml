<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="dev.project.boardserver.mapper.TagMapper">

    <insert id="register" parameterType="dev.project.boardserver.dto.TagDTO">
        INSERT INTO tag (name, url) VALUES (#{name}, #{url})
        <selectKey keyProperty="id" resultType="Integer">
            SELECT LAST_INSERT_ID()
        </selectKey>
    </insert>

    <update id="updateTag" parameterType="dev.project.boardserver.dto.TagDTO">
        UPDATE tag SET name = #{name} url = #{url} WHERE id = #{id}
    </update>

    <delete id="deletePostTag">
        DELETE FROM tag WHERE id = #{tagId}
    </delete>

    <insert id="createPostTag" parameterType="dev.project.boardserver.dto.TagDTO">
        INSERT INTO posttag (tagId, postId)
        VALUES (#{tagId}, #{postID})
    </insert>

</mapper>